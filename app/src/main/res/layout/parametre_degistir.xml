<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parametre_change"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    >

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#A4A4A4"
        android:gravity="center"

        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ricon_logo"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sms Kurulum Platformu"
            android:textSize="20sp"
            android:textColor="#000000"

            />




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parametre Değiştir"
            android:textStyle="bold"
            android:textSize="@dimen/banner_text_size"
            android:textColor="#000000"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <Button
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/btn_apn_ayarlari"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="APN Ayarları" />

    <Button
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/btn_lan_ayarlari"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LAN Ayarları" />

    <Button
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/btn_sunucu_ayarlari"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="M2M Sunucu Ayarları" />


</LinearLayout>