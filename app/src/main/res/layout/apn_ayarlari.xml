<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apn_ayar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#A4A4A4"
        android:gravity="center"

        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ricon_logo"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sms Kurulum Platformu"
            android:textSize="20sp"
            android:textColor="#000000"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APN Ayarları"
            android:textStyle="bold"
            android:textSize="@dimen/banner_text_size"
            android:textColor="#000000"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasyon Seç: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <searchablespinnermine.SearchableSpinner
            android:background="@drawable/rect_edt_txt"
            android:id="@+id/search_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/colleges"
            />
<!--
        <Spinner
            android:id="@+id/spin_apnayarlari_lokasyon_adları"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
!-->



</LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#A4A4A4"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="APN Adı:"
            />

        <EditText
            android:padding="6dp"
            android:id="@+id/edt_apnayarlari_apn_adi"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:background="@drawable/custom_edit"
            android:inputType="textMultiLine"
            android:maxLines="1"
          />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#A4A4A4"
        android:layout_marginTop="5dp"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="NAT Mode:"
            />

        <Spinner
            android:background="@drawable/rect_edt_txt"
            android:id="@+id/spin_apnayarlari_nat_mode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"></Spinner>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#A4A4A4"
        android:layout_marginTop="5dp"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Net Type:"
            />

        <Spinner
            android:layout_marginTop="3dp"
            android:background="@drawable/rect_edt_txt"
            android:id="@+id/spin_apnayarlari_net_type"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"></Spinner>



    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#A4A4A4"
        android:layout_marginTop="5dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Kullanıcı Adı:"
            />

        <EditText
            android:layout_marginLeft="2dp"
            android:padding="6dp"
            android:id="@+id/edt_apnayarlari_kullanici_adi"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit"
            android:inputType="textMultiLine"
            android:maxLines="1"
           />




    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="#A4A4A4"
        android:layout_marginTop="5dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Parola:"
            />

        <EditText

            android:padding="6dp"
            android:id="@+id/edt_apnayarlari_parola"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/custom_edit"
            android:inputType="textMultiLine"
            android:maxLines="1"
            />




    </LinearLayout>




    <Button
        android:background="@drawable/custom_button"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/btn_apn_ayarlari_gonder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Gönder"


        />

    </LinearLayout>